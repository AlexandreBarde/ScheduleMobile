<resources>

    <style name="myTimePickerDark" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">#ffffff</item>
        <item name="android:numbersInnerTextColor">#ffffff</item>
        <item name="android:numbersBackgroundColor">#303030</item>
        <item name="android:numbersSelectorColor">#000000</item>
        <item name="android:headerBackground">#303030</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#303030</item>
        <item name="colorPrimaryDark">#303030</item>
        <item name="android:background">#303030</item>
        <item name="colorAccent">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:colorControlNormal">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:editTextColor">#ffffff</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">#000000</item>
        <item name="colorPrimary">#E4E4E4</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#E4E4E4</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#E4E4E4</item>
    </style>

    <style name="CustomCalendar" parent="">
        <item name="compactCalendarBackgroundColor">#303030</item>
        <item name="compactCalendarTextColor">#E4E4E4</item>
        <item name="compactCalendarCurrentSelectedDayBackgroundColor">#808080</item>
        <item name="compactCalendarCurrentDayBackgroundColor">#000000</item>
        <item name="compactCalendarMultiEventIndicatorColor">#fff</item>
    </style>

    <style name="border_table">
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
