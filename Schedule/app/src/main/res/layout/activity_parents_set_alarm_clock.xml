<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentsSetAlarmClock">

    <TimePicker
        android:id="@+id/alarmTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:timePickerMode="clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/setAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="#CACACA"
        android:text="set alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmTimePicker" />

    <Button
        android:id="@+id/lundi"
        android:layout_width="67dp"
        android:layout_height="32dp"
        android:background="#CACACA"
        android:onClick="onClick"
        android:text="Lundi"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/setAlarm"
        app:layout_constraintEnd_toStartOf="@+id/mardi"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmTimePicker"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mardi"
        android:layout_width="67dp"
        android:layout_height="32dp"
        android:background="#CACACA"
        android:onClick="onClick"
        android:text="Mardi"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/setAlarm"
        app:layout_constraintEnd_toStartOf="@+id/mercredi"
        app:layout_constraintTop_toBottomOf="@+id/alarmTimePicker"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mercredi"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:background="#CACACA"
        android:onClick="onClick"
        android:text="Mercredi"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/setAlarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmTimePicker"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/jeudi"
        android:layout_width="67dp"
        android:layout_height="32dp"
        android:background="#CACACA"
        android:onClick="onClick"
        android:text="Jeudi"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/setAlarm"
        app:layout_constraintStart_toEndOf="@+id/mercredi"
        app:layout_constraintTop_toBottomOf="@+id/alarmTimePicker"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/vendredi"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:background="#CACACA"
        android:onClick="onClick"
        android:text="Vendredi"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/setAlarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/jeudi"
        app:layout_constraintTop_toBottomOf="@+id/alarmTimePicker"
        app:layout_constraintVertical_bias="0.496"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>