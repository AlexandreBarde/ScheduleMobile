<resources>

    <style name="myTimePickerDark" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">#808080</item>
        <item name="android:numbersInnerTextColor">#808080</item>
        <item name="android:numbersBackgroundColor">#fcfcfc</item>
        <item name="android:numbersSelectorColor">@color/colorPrimary</item>
        <item name="android:headerBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="android:textColor">#808080</item>
    </style>

    <style name="CalenderViewCustom">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">#00FF22</item>
    </style>

    <style name="CustomCalendar" parent="">
        <item name="compactCalendarBackgroundColor">#fcfcfc</item> // Background color
        <item name="compactCalendarTextColor">#808080</item>
        <item name="compactCalendarCurrentSelectedDayBackgroundColor">#6200EE</item>
        <item name="compactCalendarCurrentDayBackgroundColor">#fcfcfc</item>
        <item name="compactCalendarCurrentSelectedDayTextColor">#fcfcfc</item>
        <item name="compactCalendarMultiEventIndicatorColor">#fff</item>
    </style>

</resources>
