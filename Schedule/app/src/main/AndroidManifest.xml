<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ynov.schedule">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
      
        <activity android:name=".stopRingingAlarm"></activity>
        <activity android:name=".CalendarActivity"></activity>
        <activity android:name=".Activity_a_propos" />
        <activity android:name=".Activity_emploi_du_temps_enfant" />
        <activity android:name=".stats.StatsActivity"></activity>
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".Activity_a_propos" />
        <activity android:name=".Activity_emploi_du_temps_enfant" />
        <activity android:name=".stats.StatsActivity" />
        <activity android:name=".Activity_no_data_graph" />

      <activity
            android:name=".ParentsSetAlarmClock"
            android:exported="true" />
        <activity android:name=".MainChildActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity" />
        <activity android:name=".login.LoginUsername" />
        <activity android:name=".login.LoginPassword" />
        <activity android:name=".login.LoginButton" />
        <activity android:name=".ListAlarmClock" />
        <activity android:name=".ListAlarmClockChild" />
        <activity android:name=".Activity_main_parent" />
        <activity android:name=".Activity_gestion_des_taches" />
        <activity android:name=".Activity_add_task" />

        <receiver
            android:name=".Restarter"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="restartservice" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ReveilService"
            android:enabled="true"></service>

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>